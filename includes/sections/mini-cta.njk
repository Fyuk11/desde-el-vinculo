{# sections/mini-cta.njk #}
<section class="mini-cta">
  <!-- Huellas Font Awesome -->
  <i class="fa-solid fa-paw huella-paw"></i>
  <i class="fa-solid fa-paw huella-paw"></i>
  <i class="fa-solid fa-paw huella-paw"></i>
  <i class="fa-solid fa-paw huella-paw"></i>
  <i class="fa-solid fa-paw huella-paw"></i>
  <i class="fa-solid fa-paw huella-paw"></i>
  <i class="fa-solid fa-paw huella-paw"></i>
  <i class="fa-solid fa-paw huella-paw"></i>
  
  <div class="container">
    <div class="mini-cta-content">
      
      <!-- Texto principal -->
      <h2 class="mini-cta-title fade-up animate-on-scroll">
        {{ section_data.title }}
      </h2>

      <p class="mini-cta-subtitle fade-up delay-1 animate-on-scroll">
        {{ section_data.subtitle }}
      </p>

      <!-- CTA -->
      <div class="mini-cta-button fade-up delay-2 animate-on-scroll">
        <a href="{{ section_data.cta.url }}" 
           class="btn-primary btn-mini-cta"
           target="_blank" 
           rel="noopener noreferrer">
          {{ section_data.cta.texto }}
        </a>
      </div>

      <!-- GarantÃ­a -->
      <div class="mini-cta-garantia fade-up delay-3 animate-on-scroll">
        <i class="fas fa-shield-alt"></i>
        <span>{{ section_data.garantia }}</span>
      </div>

    </div>
  </div>
</section>