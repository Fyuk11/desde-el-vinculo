{# sections/que-incluye.njk #}
<section class="que-incluye" id="incluye">
  <div class="container">
    <div class="que-incluye-content">
      
      <!-- TÃ­tulo -->
      <h2 class="section-title fade-up animate-on-scroll">
        {{ section_data.title }}
      </h2>

      <!-- Grid de items -->
      <div class="incluye-grid">
        {% for item in section_data.items %}
        <div class="incluye-card fade-up delay-{{ loop.index }} animate-on-scroll">
          <div class="incluye-icon">
            {{ item.icono }}
          </div>
          <div class="incluye-content">
            <h3 class="incluye-title">{{ item.titulo }}</h3>
            <p class="incluye-descripcion">{{ item.descripcion }}</p>
          </div>
        </div>
        {% endfor %}
      </div>

    </div>
  </div>
</section>