{# sections/hero.njk - Con layout 70/30 #}
<section class="hero" id="hero">
  <div class="hero-overlay"></div>
  <div class="hero-fallback" style="background: linear-gradient(135deg, #f7f3e6 0%, #e8e1d1 100%);"></div>

  <div class="hero-content-wrapper">
    <div class="hero-grid">
      
      <!-- Columna principal (70%) -->
      <div class="hero-content">
        <h1 class="fade-left animate-on-scroll">
          {{ section_data.title }}
        </h1>

        {% if section_data.subheading %}
        <h2 class="fade-left delay-1 animate-on-scroll hero-subtitle">
          {{ section_data.subheading }}
        </h2>
        {% endif %}

        <p class="fade-left delay-2 animate-on-scroll">
          {{ section_data.subtitle }}
        </p>

        {% if section_data.ctas %}
        <div class="hero-ctas">
          {% for cta in section_data.ctas %}
          <a href="{{ cta.url }}"
             class="btn-primary fade-left delay-{{ loop.index + 2 }} scroll-link animate-on-scroll"
             {% if "http" in cta.url %} target="_blank" rel="noopener noreferrer"{% endif %}>
            {{ cta.text }}
          </a>
          {% endfor %}
        </div>
        {% endif %}
      </div>

      <!-- Columna PDF (30%) -->
      {% if section_data.pdf_regalo and section_data.pdf_regalo.activo %}
      <div class="hero-pdf-column fade-right animate-on-scroll">
        <div class="hero-pdf-regalo">
          <div class="pdf-badge">
            <span class="pdf-line1">{{ section_data.pdf_regalo.texto_linea1 }}</span>
            <span class="pdf-line2">{{ section_data.pdf_regalo.texto_linea2 }}</span>
          </div>
          <form class="pdf-form" data-netlify="true" name="{{ section_data.pdf_regalo.form_id }}">
            <input type="email" name="email" placeholder="Tu email aquÃ­..." required>
            <button type="submit">Enviarme el PDF</button>
            <p class="pdf-privacy">ðŸ”’ Respetamos tu privacidad. Sin spam.</p>
          </form>
        </div>
      </div>
      {% endif %}

    </div>
  </div>
</section>