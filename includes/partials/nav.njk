{# partials/nav.njk - Con nombre responsive #}
<nav class="nav--venta" id="mainNav">
  <div class="nav__overlay"></div>
  <div class="nav__inner">
    
    <!-- Brand con Logo dinámico -->
    <a href="#hero" class="nav__brand scroll-link">
      {% if landing.logo %}
        <img src="{{ landing.logo }}" alt="Desde el Vínculo" class="nav__logo">
      {% else %}
        <i class="fas fa-paw nav__icon"></i>
      {% endif %}
      <span class="nav__brand-text nav__brand-full">Educando desde el Vínculo</span>
      <span class="nav__brand-text nav__brand-short">Desde el Vínculo</span>
    </a>

    <!-- Menú principal -->
    <ul class="nav__menu">
      {% for item in landing.nav %}
      <li>
        <a href="{{ item.url }}" 
           class="scroll-link {% if item.external %}external-link{% endif %}"
           {% if item.external %}target="_blank" rel="noopener noreferrer"{% endif %}>
          {{ item.text }}
        </a>
      </li>
      {% endfor %}
    </ul>

    <!-- Burger menu -->
    <button class="nav__toggle" aria-label="Abrir menú">
      <span></span>
      <span></span>
      <span></span>
    </button>

  </div>
</nav>